<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/product_sub_layout">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/apple"
            android:scaleType="fitXY"
            android:id="@+id/product_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Premium Apple"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/txtProduct_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:text="Weight: 1Kg"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/txtProduct_quantity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 165"
            android:layout_marginTop="80dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:id="@+id/txtProduct_price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 155"
            android:layout_marginTop="80dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorDiscount"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:id="@+id/txtProduct_discount_price"/>
        <Button
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/wishlist_product"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:background="@drawable/minus_red"
            android:layout_toStartOf="@id/number"
            android:textSize="15sp"
            android:layout_marginEnd="@dimen/margin_basic"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:id="@+id/btnMinus"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnPlus"
            android:layout_marginEnd="@dimen/margin_basic"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:text="1"
            android:visibility="gone"
            android:textColor="@color/colorBlack" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text=""
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ic_add_box_red_24dp"
            android:layout_marginEnd="@dimen/margin_basic"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:id="@+id/btnPlus"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="ADD"
            android:textSize="15sp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="@dimen/margin_basic"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:id="@+id/addTocart"/>
        <TextView
            android:id="@+id/product_home_OOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ Out of Stock"
            android:layout_marginTop="80dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:layout_marginStart="120dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>